{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",

    "lib": ["esnext"],
    "types": ["node"],

    "strict": true,
    "skipLibCheck": true,

    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    },

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "moduleResolution": "nodenext"
  },
  "include": ["src", "src/config/env.ts"]
}
